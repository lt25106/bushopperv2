{
  "rules": {
    ".read": true,
    "leaderboard": {
      "$busnums": {
        "$uid": {
          ".write": "(!data.exists() || data.child('distance').val() > newData.child('distance').val()) && auth.uid == $uid"
        }
      }
    },
    "users": {
      "$uid": {
        ".write": "auth.uid == $uid && !data.child('name').exists()"
      }
    }
  }
}